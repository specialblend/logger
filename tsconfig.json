{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "__mocks__/*"
  ]
}
